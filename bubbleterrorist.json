{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Terrorist Attacks",
  "data": {
    "url": "https://raw.githubusercontent.com/heycurl/FIT3179/master/data/attack.csv"
  },
  "params": [
    {
      "name": "Country_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Afghanistan",
          "Algeria",
          "Bangladesh",
          "Dagestan",
          "UK",
          "India",
          "Indonesia",
          "Israel",
          "Morocco",
          "Nigeria",
          "Pakistan",
          "Philippines",
          "Sudan",
          "Tunisia",
          "USA"
        ],
        "labels": [
          "Show All",
          "Afghanistan",
          "Algeria",
          "Bangladesh",
          "Dagestan",
          "UK",
          "India",
          "Indonesia",
          "Israel",
          "Morocco",
          "Nigeria",
          "Pakistan",
          "Philippines",
          "Sudan",
          "Tunisia",
          "USA"
        ],
        "name": "Country Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Injured < 1000"},
    {
      "filter": "Country_Selection == null || datum.Country == Country_Selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Total",
      "type": "quantitative",
      "title": "Total Cases",
      "axis": {"tickCount": 0},
      "scale": {"type": "log", "domain": [1, 500]}
    },
    "y": {
      "field": "Killed",
      "type": "quantitative",
      "axis": {"tickCount": 0},
      "scale": {"type": "log", "domain": [1, 250]}
    }
  },
  "layer": [
    {
      "selection": {
        "country_highlight": {
          "type": "multi",
          "fields": ["Country"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Total",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 10, 100, 150, 200, 250, 300, 350, 400],
            "range": [50, 100, 150, 200, 250, 300, 350, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": [
              "Afghanistan",
              "Algeria",
              "Bangladesh",
              "Dagestan",
              "UK",
              "India",
              "Indonesia",
              "Israel",
              "Morocco",
              "Nigeria",
              "Pakistan",
              "Philippines",
              "Sudan",
              "Tunisia",
              "USA"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628",
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#377eb8",
              "#a65628",
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#377eb8"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "country_highlight", "value": 0.6},
          "value": 0.5
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Total", "type": "quantitative", "format": ","},
          {"field": "Killed", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Afghanistan' || datum['Country'] == 'Pakistan' || datum['Country'] == 'Algeria' || datum['Country'] == 'Nigeria'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Total", "type": "quantitative", "format": ","},
          {"field": "Killed", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}