{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1000,
  "height": 1000,
  "title": {
    "text": "Tsunami Deaths around the World",
    "fontSize": "49",
    "color": "blue"
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/heycurl/FIT3179/master/json/world.json",
        "format": {"type": "topojson", "feature": "world"}
      },
      "mark": {"type": "geoshape", "fill": "white", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/heycurl/FIT3179/master/data/tsunami.csv"
      },
      "encoding": {
        "longitude": {"field": "LONGITUDE", "type": "quantitative"},
        "latitude": {"field": "LATITUDE", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "circle", "tooltip": true},
          "encoding": {
            "color": {
              "field": "DEATHS",
              "type": "quantitative",
              "scale": {"scheme": "turbo"},
              "tooltip": [
                {"field": "LONGITUDE", "type": "nominal"},
                {"field": "LATITUDE", "type": "nominal"},
                {"field": "DEATHS", "type": "quantitative"}
              ]
            }
          }
        }
      ]
    }
  ],
  "config": {}
}